pipeline {
    agent any
    tools {
         maven 'Maven3'
    }
    stages {
      stage ('Clone') {
            steps {
               git branch: 'main', url: 'https://github.com/prethivirajp/jfrog-assesment.git'
            }
        }
        stage ('Compile') {
            steps {
               sh 'mvn help:effective-settings'
               //echo '${M2.HOME}/conf/settings.xml'
               sh 'mvn clean install -s settings1.xml'
            }
        }
       stage ('Testing') {

            steps {
               sh 'mvn test'
            }
        }
        stage('Install Maven Package') {
            steps {
                sh 'mvn clean package'
                } 
        }
        stage('Build Docker Image') {
            steps {
                 sh 'docker build -t assesment1.jfrog.io/artifactory/docket-petclinic-docker-local/docker-local:myapp .'
            }
        }
    }
}
